<Window x:Name ="AuthWindow" x:Class="praktika.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:praktika"
        Closing="AuthWindow_Closing"  
        mc:Ignorable="d"
        Title="Вход" Height="300" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid>
        <Canvas Background="#FF1A1A1A">
            <Button x:Name="Enter" Content="Войти" Canvas.Left="204" Canvas.Top="194" Foreground="White" Background="#FF3D3D3D" FontSize="30" Click="EnterClick"/>
            <Label Content="Логин:" Canvas.Left="29" Canvas.Top="30" Foreground="White" FontSize="30"/>
            <Label Content="Пароль:" Canvas.Left="10" Canvas.Top="130" Foreground="White" FontSize="30"/>
            <TextBox x:Name="PasswordTextBox" Canvas.Left="134" TextWrapping="Wrap" Text="" Canvas.Top="134" Width="326" FontSize="30"/>
            <TextBox x:Name="LoginTextBox" Canvas.Left="134" TextWrapping="Wrap" Text="" Canvas.Top="34" Width="326" FontSize="30"/>
        </Canvas>
    </Grid>
</Window>
